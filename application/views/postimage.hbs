<div class="post-page">
    <div class="container">
        <div class="reg-upload-card">
            <form method="POST" action="/posts/createPost" enctype="multipart/form-data">

                <h2 class="heading">Post Images</h2>

                <label for="title">Title</label>
                <input class="input" type="text" name="title" placeholder="...">

                <label for="desc">Description</label>
                <textarea class="input" style="height: 130px;" name="description" placeholder="..."></textarea>

                <div class="upload">
                    <label for="upload">Upload your Image:</label>
                    <input type="file" name="uploadImage" required>
                </div>

                <div class="check">
                    <input type="checkbox" name="confirmPolicy" required>
                    <label for="img-policy">I have read and accept the</label>
                    <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank">Acceptable Use Policy for
                        uploading images.</a>
                </div>

                <input class="button" type="submit" value="Submit">

            </form>
        </div>
    </div>
</div>
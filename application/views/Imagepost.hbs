<div class="post-page">
    <div class="container">
        <div class="post-container">
            <div class="post-card">


                <h5>Uploaded by {{currentPost.username}} at {{currentPost.created}}.</h5>
                <h3>{{currentPost.title}}</h3>

                <img class="post-image" src="/{{currentPost.photopath}}" alt="Image">
                <h4>{{currentPost.description}}</h4>



            </div>
            <div class="comments-container">
                <div class="messages">
                    <div id="message-">
                        <string class="author-text">@lindi</string>
                        <span class="date-posted">30 minutes ago </span>
                        <div class="comment-text">yo nice pic yo nice picyo nice picyo nice picyo nice picyo nice picvyo
                            nice picyo nice picyo nice picyo nice pic</div>
                    </div>
                </div>
                <div class="enter-comments">
                    <textarea class="input" style="height: 50px;" placeholder="Comment Here!"></textarea>
                    <button type="submit" style="height: 50px;" id="searchButton" class="searchButton">
                        <i class="fa fa-arrow-up" class="searchButton"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div id="main-page-content">
        {{#each results}}
        {{> card this}}
        {{/each}}
    </div>
</div>